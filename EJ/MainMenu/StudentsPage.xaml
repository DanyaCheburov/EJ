<Page x:Class="EJ.MainMenu.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EJ.MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="studentDataGrid" ItemsSource="{Binding Students}" AutoGenerateColumns="False" IsReadOnly="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Users.Name}"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding Groups.GroupName}"/>
                <DataGridTextColumn Header="Факультет" Binding="{Binding Faculty}"/>
                </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Content="Изменить" Click="SaveChangesButton_Click"/>
    </Grid>
</Page>
