<Page x:Class="EJ.MainMenu.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EJ.MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="studentDataGrid" ItemsSource="{Binding Students}" AutoGenerateColumns="False" IsReadOnly="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Users.Name}"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding Groups.GroupName}"/>
                <DataGridTextColumn Header="Отделение" Binding="{Binding Departments.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить студента" Grid.Row="1" Margin="27,34,546,34" Click="AddStudentGroup_Click" Cursor="Hand"/>
        <Button Grid.Row="1" Margin="524,34,26,34" Content="Сохранить изменения" Click="SaveChangesButton_Click"/>
    </Grid>
</Page>
