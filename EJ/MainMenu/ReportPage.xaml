<Page x:Class="EJ.MainMenu.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EJ.MainMenu"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Предмет:" Margin="10"/>
            <ComboBox x:Name="ComboSubject" ItemsSource="{Binding Subjects}" DisplayMemberPath="Name" Margin="10"/>
            <Label Content="Группа:" Margin="10"/>
            <ComboBox x:Name="ComboGroup" ItemsSource="{Binding Groups}" DisplayMemberPath="GroupName" Margin="10"/>
            <Label Content="От:" Margin="10"/>
            <DatePicker x:Name="DatePickerFrom"></DatePicker>
            <Label Content="До:" Margin="10"/>
            <DatePicker x:Name="DatePickerTo"></DatePicker>
            <Button x:Name="Print" Click="Print_Click" Content="Печатать" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>

