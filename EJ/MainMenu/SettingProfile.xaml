<Page x:Class="EJ.MainMenu.SettingProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EJ.MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingProfile">

    <Grid>
        <!-- Примерный код настроек для профиля -->
        <StackPanel>
            <TextBlock Text="Настройки профиля" FontSize="20" FontWeight="Bold" Margin="10" />

            <StackPanel Margin="10">
                <TextBlock Text="Имя пользователя" FontSize="16" />
                <TextBox Text="{Binding Users.Name}" FontSize="16" Width="200" />
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Адрес электронной почты" FontSize="16" />
                <TextBox Text="{Binding Users.Email}" FontSize="16" Width="200" />
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Пароль" FontSize="16" />
                <TextBox Text="{Binding Users.Password}" FontSize="16" Width="200" />
            </StackPanel>

            <StackPanel Margin="10">
                <Button Content="Сохранить" FontSize="16" Width="100" Height="30" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
